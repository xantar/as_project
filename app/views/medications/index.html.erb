<% title "Medications" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Usage</th>
  </tr>
  <% for medication in @medications %>
    <tr>
      <td><%= medication.name %></td>
      <td><%= medication.description %></td>
      <td><%= medication.usage %></td>
      <td><%= link_to "Show", medication %></td>
      <td><%= link_to "Edit", edit_medication_path(medication) %></td>
      <td><%= link_to "Destroy", medication, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Medication", new_medication_path %></p>
