<% title "Dragon: #{@dragon.number} - Complete Weight History" %>

<div class="field">
<p class="title">
  <strong>Weight History:</strong>
</p>
  <table>
  <th width=30%>Type</th>
  <th width=50%>Date</th>
  <th>Weight</th>
  <% @dragon.weights.sort_by(&:weighed_on).reverse.each do |w| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= w.weight_type.name %></td>
    <td><%= w.weighed_on %></td>
    <td><%= w.weight %></td>
      <% if access?(w.user_id) %> 
        <td><%= link_to "Edit", edit_weight_path(w) %></td>
      <% end %>
  </tr>
  <% end %>
  </table>
  <%= link_to "Add New Weight", new_dragon_weight_path(@dragon.id) %>
</div>
<br/>
  <%= link_to "Back to #{@dragon.number}", @dragon %>
<br/>
