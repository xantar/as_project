<% title "Treatments" %>

<table>
  <tr>
    <th>Dragon</th>
    <th>Treated On</th>
    <th>Medication</th>
  </tr>
  <% for treatment in @treatments %>
    <tr>
      <td><%= link_to(treatment.dragon.number, treatment.dragon) %></td>
      <td><%= treatment.treated_on %></td>
      <td><%= link_to(treatment.medication.name, treatment.medication) %></td>
      <% if access?(treatment.user_id) %>
        <td><%= link_to "Edit", edit_treatment_path(treatment) %></td>
        <td><%= link_to "Destroy", treatment, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Treatment", new_treatment_path %></p>
