<%= form_for @clutch do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :laid_on %><br />
    <%= f.date_select :laid_on %>
  </p>
  <p>
    <%= f.label :viable %><br />
    <%= f.select :viable, 0..50 %>
  </p>
  <p>
    <%= f.label :questionable %><br />
    <%= f.select :questionable, 0..50 %>
  </p>
  <p>
    <%= f.label :total %><br />
    <%= f.select :total, 0..50 %>
  </p>
  <p>
    <%= f.label :m_dragon_id %><br />
    <% if params[:dragon_id] && Dragon.find(:first, :conditions => {:id => params[:dragon_id]}).male %>
    <%= f.collection_select :m_dragon_id, Dragon.find(:all, :conditions => 
                                                                { :male => true,
                                                             :status_id => 1,
                                                                }
    ), :id, :number, :selected => params[:dragon_id] %>
    <% else %>
    <%= f.collection_select :m_dragon_id, Dragon.find(:all, :conditions => 
                                                                { :male => true,
                                                             :status_id => 1,
                                                                }
    ), :id, :number %>
    <% end %>
  </p>
  <p>
    <%= f.label :f_dragon_id %><br />
    <% if params[:dragon_id] && Dragon.find(:first, :conditions => {:id => params[:dragon_id]}).male %>
    <%= f.collection_select :f_dragon_id, Dragon.find(:all, :conditions => 
                                                                { :male => false,
                                                             :status_id => 1,
                                                                }
    ), :id, :number %>
    <% else %>
    <%= f.collection_select :f_dragon_id, Dragon.find(:all, :conditions => 
                                                                { :male => false,
                                                             :status_id => 1,
                                                                }
    ), :id, :number, :selected => params[:dragon_id] %>
    <% end %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <p><%= f.submit %></p>
<% end %>

