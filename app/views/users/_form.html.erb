<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
   <p>
    <%= f.label :firstname, "First Name" %><br />
    <%= f.text_field :firstname %>
  </p> <p>
    <%= f.label :lastname, "Last Name" %><br />
    <%= f.text_field :lastname %>
  </p>
<% if highaccess? && @user.id != current_user.id %>
<% if admin? %>
  <p>
    <%= f.label :manager, "Manager Access" %> 
    <%= f.check_box :manager %>
  </p>
<% end %>
  <p>
    <%= f.label :employeed, "Employeed" %>
    <%= f.check_box :employeed %>
  </p>
<% end %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
<% end %>

<p>
<%= link_to( "Back", :back ) %>
</p>
